<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.netifera.platform.ui.category.General"
            class="com.netifera.platform.ui.treemap.TreeMapView"
            icon="icons/treemap.png"
            id="com.netifera.platform.views.treemap"
            name="Tree Map"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.netifera.platform.views.treemap"
               minimized="false"
               ratio="0.55"
               relationship="fast"
               relative="com.netifera.platform.ui.views.Tasks">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
