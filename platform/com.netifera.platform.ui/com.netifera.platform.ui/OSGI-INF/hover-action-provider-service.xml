<?xml version="1.0" encoding="UTF-8"?>
<component name="netifera.hover-action-provider-service">
	<implementation class="com.netifera.platform.ui.internal.HoverActionProviderService" />
	<service>
		<provide interface="com.netifera.platform.ui.api.hover.IHoverActionProviderService" />
	</service>
	
	<reference 
		name="ACTION_PROVIDERS"
		interface="com.netifera.platform.ui.api.hover.IHoverActionProvider"
		bind="registerProvider"
		unbind="unregisterProvider"
		cardinality="0..n"
		policy="dynamic"
	/>
	
	<reference
        name="LOGGER"
        interface="com.netifera.platform.api.log.ILogManager"
        bind="setLogManager"
        unbind="unsetLogManager"
    />
</component>
